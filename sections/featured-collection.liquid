<section class="container py-4">
    <h2 class="text-center my-3">{{ section.settings.title }}</h2>
    <div class="row">
    {% for product in collections[section.settings.featured_collection].products %}
        {% assign image = product.featured_image %}
        <div class="col">
            <div class="card p-2 m-1" style="width: 18rem; ">
                {% if image != blank %}
                    <img src="{{ image | img_url : 'medium' }}" alt="" class="card-image-top img-fluid">
                    {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'card-image-top img-fluid' }}
                {% endif %}
                    <div class="card-body">
                        <h4><a href="{{ product.url }}">{{ product.title }}</a></h4> 
                        <p>{{ product.price | money_without_trailing_zeros }}</p>
                    </div>
            </div>  
        </div>        
    {% endfor %}
    </div>
    
</section>

{% schema %}
{
    "name": "Featured collection",
    "class": "featured-collection-section",
    "settings": [
        {
            "type" : "collection",
            "id" : "featured_collection",
            "label": "Collections"
        },
        {
            "type" : "text",
            "id": "title",
            "default" : "Featured Collections",
            "label": "Title"
        }
    ],
    "presets": [
        {
            "category" : "Collection",
            "name" : "Featured Collection"
        }
    ]
}
{% endschema %}