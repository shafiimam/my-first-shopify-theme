html, body {

}
.inner-hero-section {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 500px;
}

.inner-hero-section img,
.inner-hero-section svg {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100vw;
    z-index: -1;
}
.hero-content {
    position: absolute;
    top:0;
    z-index: 10;
}

.login-form{
    width: 100%;
    max-width: 400px ;
    margin: 0 auto;
}

.dropup{
    position: relative;
    display: inline-block;
}

.localBtn {
    position: absolute;
    background-color: #3298d8;
    color: #fff;
    padding: 6px;
    font-size:20px;
    bottom: 25px;
    right: 25px;
    border-radius: 50%;
    max-width: 70px;
    max-height: 70px;
    box-shadow: -1px 0px 20px 0px #00000066;
}
.localBtn img{
    height:50px;
    width: 50px;
}

.dropup-content {
    display: none;
    position: fixed;
    bottom: 90px;
    right: 25px;
    min-width: 210px;
    background-color: #f1f1f1;
}

.drop_up:hover .dropup-content {
    display: block;
}