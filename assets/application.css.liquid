html, body {

}
.inner-hero-section {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 500px;
}

.inner-hero-section img,
.inner-hero-section svg {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100vw;
    height: 100%;
    object-fit: cover;
    object-position: top;
    z-index: -1;
}
.hero-content {
    position: absolute;
    top:0;
    z-index: 10;
}

.login-form{
    width: 100%;
    max-width: 400px ;
    margin: 0 auto;
}

.dropup{
    position: relative;
    display: inline-block;
}

.localBtn {
    position: fixed;
    padding: 6px;
    font-size:20px;
    bottom: 60px;
    right: 25px;
    box-shadow: -1px 0px 20px 0px #00000066;
}
.localBtn img{
    height:50px;
    width: 50px;
}

.dropup-content {
    display: none;
    position: fixed;
    bottom: 90px;
    right: 25px;
    min-width: 210px;
    background-color: #f1f1f1;
}

.drop_up:hover .dropup-content {
    display: block;
}
.dropup-content a {
    color: #000;
    font-size: 17px;
    padding: 15px 10px;
    display: block;
    text-align: center;
}

#shopify-section-translation{
    position: fixed;
}

.feature-collection-section .card {
    z-index: -1;
}